{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["node", "jest"],
    "paths": {
      "@/*": ["src/*"],
      "portal-vue": ["./src/index"]
    },
    "lib": ["es2019", "dom", "dom.iterable", "ScriptHost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "docs/**/*.vue",
    "docs/**/*.ts",
    "docs/.vitepress/**/*.vue",
    "docs/.vitepress/**/*.ts",
    "example/**/*.ts",
    "example/**/*.tsx",
    "example/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
